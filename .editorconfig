; https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[manifest/**.{json,xml}]
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4
shell_variant = bash
binary_next_line = false
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = false
