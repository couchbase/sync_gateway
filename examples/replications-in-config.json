      "log_keys": ["*"]
    }
  },
  "databases": {
    "db": {
      "server": "couchbase://localhost",
      "username": "username",
      "password": "password",
      "bucket": "default",
      "allow_conflicts": false,
      "revs_limit": 20,
      "replications": {
        "push-continuous": {
          "direction": "push",
          "remote": "http://localhost:4985/db2",
          "continuous": true
        },
        "pull-continuous": {
          "direction": "pull",
          "remote": "http://localhost:4985/db3",
          "continuous": true
        }
      }
    },
    "db2": {
      "server": "couchbase://localhost",
      "username": "username",
      "password": "password",
